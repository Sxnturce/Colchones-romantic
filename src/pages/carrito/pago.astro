---
import Layout from "../../layouts/Layout.astro";
import Productos from "../../components/carrito/Productos.astro";
import Payment from "../../components/carrito/Payment.astro";
---

<Layout title="Colchones Romantic">
	<section
		class="w-11/12 max-w-7xl mx-auto mt-[120px] grid grid-cols-1 gap-8 lg:grid-cols-[2fr_1fr] min-h-screen"
	>
		<Productos />
		<div class="border-gray-200">
			<div class="flex flex-col gap-8 border-[1px] p-6">
				<h2 class="font-bold">Resumen del Pedido</h2>
				<div class="flex flex-col gap-2">
					<Payment title="Subtotal" price="4,038" />
					<Payment title="Envio" price="Free" isfree={true} />
					<Payment title="IGV" price="726.84" />
				</div>
				<hr />
				<Payment title="Total" price="4,764.60" isbold={true} />
				<a
					href="/carrito/checkout"
					class="w-full bg-neutral-800 text-white py-2 text-center rounded-sm hover:bg-neutral-700 transition-all ease-in-out duration-200"
					>Pagar</a
				>
				<a
					href="#"
					class="underline text-center hover:text-neutral-700 transition-all ease-in-out duration-200"
					>Continuar comprando</a
				>
			</div>
		</div>
	</section>
</Layout>
