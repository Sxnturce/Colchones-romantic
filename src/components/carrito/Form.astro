<div class="flex flex-col gap-4 py-4 lg:px-8 px-4 lg:min-h-screen">
	<h2 class="font-semibold text-lg">Direccion de envio</h2>
	<form action="" class="flex flex-col gap-4">
		<div class="flex flex-col gap-1">
			<label for="address">Direccion:</label>
			<input type="text" placeholder="Direccion" id="address" />
		</div>
		<div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
			<div class="flex flex-col gap-1">
				<label for="city">Ciudad:</label>
				<input type="text" placeholder="Ciudad" id="city" />
			</div>
			<div class="flex flex-col gap-1">
				<label for="phone">Celular:</label>
				<input type="text" placeholder="Numero de Celular" id="phone" />
			</div>
		</div>
		<div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
			<div class="flex flex-col gap-1">
				<label for="email">Email:</label>
				<input type="text" placeholder="Email" id="email" />
			</div>
			<div class="flex flex-col gap-1">
				<label for="name">Nombre completo:</label>
				<input type="text" placeholder="Nombre completo" id="name" />
			</div>
		</div>
		<h2 class="font-semibold text-lg">Pago</h2>
		<div class="flex flex-col gap-1">
			<label for="card">Numero de tarjeta:</label>
			<input type="text" placeholder="555 5555 5555 5555" id="card" />
		</div>
		<div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
			<div class="flex flex-col gap-1">
				<label for="expiration">Fecha de expiracion:</label>
				<input type="text" placeholder="05/28" id="expiration" />
			</div>
			<div class="flex flex-col gap-1">
				<label for="cvv">CVV:</label>
				<input type="text" placeholder="CVV" id="cvv" />
			</div>
		</div>
		<div class="flex flex-col gap-1">
			<label for="titular">Nombre del titular de la tarjeta:</label>
			<input type="text" placeholder="Example" id="titular" />
		</div>
	</form>
</div>

