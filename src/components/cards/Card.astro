---
const { image, alt, info, stock, price } = Astro.props;
---

<div
	class="bg-bgCards flex flex-col items-center p-3 gap-4 rounded-s cursor-pointer hover:scale-[1.035] hover:shadow-md transition-all ease-in duration-200"
>
	<a href="/producto/id">
		<img
			src={`/img/item-${image}.png`}
			alt={alt}
			class="object-contain aspect-[1.5/1]"
		/>
	</a>
	<p class="text-[1rem] font-[500] text-center h-[60px]">{info}</p>
	<div class="flex justify-evenly items-center w-full">
		<a
			href="#"
			class={`text-white text-sm font-[500] py-1 px-2 rounded-md ${
				stock ? "bg-green-500" : "bg-red-500"
			}`}>{stock ? "En stock" : "Agotado"}</a
		>
		<p class="text-font font-semibold">S/ {price}</p>
	</div>
</div>
