<section
	class="w-full bg-bgCards sm:p-4 p-3 h-[500px] flex justify-center items-center mt-[90px]"
>
	<div
		class="sm:w-11/12 w-full mx-auto grid grid-cols-1 lg:grid-cols-[1fr_1.2fr] max-w-7xl gap-6"
	>
		<div
			class="flex flex-col gap-6 justify-center order-2 lg:order-1 lg:items-start items-center"
		>
			<h1 class="text-fontHero font-bold sm:text-4xl text-2xl">
				Recien llegados en Línea
			</h1>
			<p class="text-font">Descubra nuestra colección mas reciente</p>
			<a
				href="/productos"
				class="bg-bgButton text-white py-2 px-4 rounded-md w-max flex items-center transition-all ease-in-out duration-200 hover:bg-bgButtonHover"
				>Ver colección <i class="bx bx-right-arrow-alt ml-1"></i></a
			>
		</div>
		<div
			class="relative flex items-center justify-center overflow-hidden w-full order-1 lg:order-2"
		>
			<div
				class="absolute z-[1] md:w-[350px] md:h-[350px] w-[300px] h-[300px] rounded-full bg-bgElipsis opacity-50 ] lg:right-[18%] right-auto"
			>
			</div>
			<img
				src="/img/imgHero.png"
				alt="Imagen Hero"
				class="relative z-[2] w-full max-w-[550px] max-h-[550px] h-full min-w-[450px] aspect-[1.5/1]"
			/>
		</div>
	</div>
</section>
